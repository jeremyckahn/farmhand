{
  "name": "@jeremyckahn/farmhand",
  "version": "1.14.3-9",
  "publishConfig": {
    "access": "public"
  },
  "description": "A farming game",
  "main": "public/electron.js",
  "unpkg": "build/index.html",
  "homepage": "https://www.farmhand.life/",
  "scripts": {
    "build": "react-scripts build",
    "build:native": "cross-env PUBLIC_URL='./' npm run build && electron-builder --publish=always",
    "build:analyze": "npm run build && source-map-explorer 'build/static/js/*.js'",
    "dev": "mprocs \"npm run start\" \"npm run start:api\" \"npm run start:backend\"",
    "dev:native": "mprocs \"BROWSER=none npm run start\" \"npm run start:api\" \"npm run start:backend\" \"npm run electron\"",
    "electron": "wait-on tcp:3000 && electron .",
    "doc": "jsdoc -c .jsdoc -r src",
    "doc:view": "serve -S dist/doc",
    "doc:watch": "nodemon --exec \"npm run doc\" --watch src --watch ./ --ext js,md --ignore dist",
    "lint": "eslint src --max-warnings=0",
    "prettier": "prettier 'src/**/*.js' --write",
    "preversion": "CI=true npm run test",
    "postversion": "git push && git push --tags",
    "start": "react-scripts start",
    "start:api": "vercel dev --listen localhost:3001",
    "start:backend": "docker-compose up",
    "test": "react-scripts test",
    "test:debug": "react-scripts --inspect-brk test --runInBand --no-cache",
    "update-images": "bash update-images.sh"
  },
  "author": "Jeremy Kahn <jeremyckahn@gmail.com>",
  "license": "GPL-2.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/jeremyckahn/farmhand.git"
  },
  "engines": {
    "node": "14.x",
    "npm": "7.x"
  },
  "devDependencies": {
    "@jeremyckahn/minami": "^1.3.1",
    "@testing-library/dom": "^8.3.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "cross-env": "^7.0.2",
    "electron": "^19.0.8",
    "electron-builder": "^23.1.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.12.1",
    "eslint": "^7.13.0",
    "eslint-config-react-app": "^5.2.0",
    "eslint-plugin-flowtype": "^4.6.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.0",
    "git-branch-is": "^4.0.0",
    "husky": "^4.2.3",
    "jest-extended": "^0.11.5",
    "jimp": "^0.16.1",
    "jsdoc": "^3.5.5",
    "jsdom": "^16.2.1",
    "mprocs": "^0.4.0",
    "node-sass": "^4.14.1",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.13.7",
    "pretty-quick": "^2.0.1",
    "react-scripts": "^4.0.3",
    "serve": "^11.3.2",
    "vercel": "^21.3.3",
    "wait-on": "^6.0.1"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.27",
    "@fortawesome/free-regular-svg-icons": "^5.12.1",
    "@fortawesome/free-solid-svg-icons": "^5.12.1",
    "@fortawesome/react-fontawesome": "^0.1.9",
    "@material-ui/core": "^4.11.3",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.53",
    "animate.css": "^4.1.0",
    "axios": "^0.21.1",
    "buffer": "^6.0.3",
    "classnames": "^2.2.6",
    "compass-mixins": "^0.12.10",
    "dinero.js": "^1.7.0",
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^5.0.5",
    "fast-memoize": "^2.5.2",
    "file-saver": "^2.0.2",
    "global": "^4.4.0",
    "localforage": "^1.7.3",
    "lodash.debounce": "^4.0.8",
    "lodash.sortby": "^4.7.0",
    "lodash.throttle": "^4.1.1",
    "notistack": "^1.0.5",
    "prop-types": "^15.6.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-file-reader-input": "^2.0.0",
    "react-hotkeys": "^2.0.0",
    "react-markdown": "^4.3.1",
    "react-number-format": "^4.4.1",
    "react-router-dom": "^5.2.0",
    "react-zoom-pan-pinch": "^1.6.1",
    "redis": "^3.0.2",
    "shifty": "^2.15.2",
    "source-map-explorer": "^2.3.1",
    "trystero": "^0.11.1",
    "typeface-francois-one": "0.0.71",
    "typeface-public-sans": "^1.1.4",
    "uuid": "^3.4.0",
    "workbox-background-sync": "^6.1.5",
    "workbox-broadcast-update": "^6.1.5",
    "workbox-cacheable-response": "^6.1.5",
    "workbox-core": "^6.1.5",
    "workbox-expiration": "^6.1.5",
    "workbox-google-analytics": "^6.1.5",
    "workbox-navigation-preload": "^6.1.5",
    "workbox-precaching": "^6.1.5",
    "workbox-range-requests": "^6.1.5",
    "workbox-routing": "^6.1.5",
    "workbox-strategies": "^6.1.5",
    "workbox-streams": "^6.1.5"
  },
  "build": {
    "appId": "life.farmhand.game",
    "productName": "Farmhand",
    "extraMetadata": {
      "name": "Farmhand",
      "main": "build/electron.js"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "public",
      "output": "build/native"
    },
    "mac": {
      "target": "dmg",
      "icon": "./public/app-icons/Icon-512x512.png"
    },
    "win": {
      "target": "nsis",
      "icon": "./public/app-icons/Icon-512x512.png"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage"
        }
      ],
      "category": "Game",
      "icon": "./public/app-icons/Icon-512x512.png"
    },
    "publish": {
      "provider": "github",
      "owner": "jeremyckahn",
      "repo": "farmhand",
      "releaseType": "release"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && npm run lint && if git-branch-is develop; then cross-env CI=true react-scripts test --env=jsdom; fi"
    }
  },
  "files": [
    "src",
    "build",
    "public"
  ],
  "craGenerate": {
    "cssExtension": "sass",
    "type": "functional"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!trystero)/"
    ]
  },
  "optionalDependencies": {
    "piskel-cli": "^1.0.41"
  }
}
